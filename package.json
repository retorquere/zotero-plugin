{
  "name": "zotero-plugin",
  "version": "6.4.0",
  "description": "Zotero plugin builder",
  "homepage": "https://github.com/retorquere/zotero-plugin/wiki",
  "bin": {
    "zp-release": "bin/release.mjs",
    "zp-zipup": "bin/zipup.mjs",
    "zp-link": "bin/link.mjs",
    "issue-branches": "bin/branches.mjs",
    "zotero-start": "bin/start.mjs",
    "zp-fetch-log": "bin/fetch-log.mjs",
    "zp-keypair": "bin/keypair.mjs"
  },
  "author": {
    "name": "Emiliano Heyns",
    "email": "Emiliano.Heyns@iris-advies.com"
  },
  "scripts": {
    "preversion": "npm test",
    "postversion": "git push --follow-tags",
    "test": "dprint fmt *.ts */*.ts && dprint check *.ts */*.ts && npm run build",
    "build": "tsc && ./bundle.mjs && chmod +x bin/*.mjs",
    "postbuild": "rm bin/*.js bin/*.d.ts",
    "pack": "npm test && npm pack",
    "prepublishOnly": "npm install && npm run build",
    "ncu": "ncu -u && npm i && git add package.json package-lock.json && git commit -m ncu"
  },
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "@napi-rs/keyring": "^1.2.0",
    "@octokit/rest": "^22.0.0",
    "@rgrove/parse-xml": "^4.2.0",
    "@types/node": "^24.2.1",
    "@xmldom/xmldom": "^0.9.8",
    "ajv": "^8.17.1",
    "ajv-keywords": "^5.1.0",
    "archiver": "^7.0.1",
    "clp": "^4.0.13",
    "commander": "^14.0.0",
    "dotenv": "^17.2.2",
    "ejs": "^3.1.10",
    "fs-extra": "^11.3.1",
    "glob": "^11.0.3",
    "ini": "^5.0.0",
    "jsesc": "^3.1.0",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "node-fetch": "^3.3.2",
    "node-stream-zip": "^1.15.0",
    "openpgp": "^6.2.0",
    "peggy": "^5.0.6",
    "prompts": "^2.4.2",
    "properties-reader": "^2.3.0",
    "pug": "^3.0.3",
    "rimraf": "^6.0.1",
    "shell-quote": "^1.8.3",
    "shelljs": "^0.10.0",
    "string-to-arraybuffer": "^1.0.2",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "uri-templates": "^0.2.0",
    "uzip": "^0.20201231.0",
    "xml-parser": "^1.2.1",
    "xpath": "^0.0.34"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/retorquere/zotero-plugin.git"
  },
  "license": "ISC",
  "files": [
    "bin/branches.mjs",
    "bin/link.mjs",
    "bin/release.mjs",
    "bin/zipup.mjs",
    "bin/start.mjs",
    "bin/fetch-log.mjs",
    "bin/keypair.mjs",
    "esbuild.d.ts",
    "esbuild.js",
    "continuous-integration.d.ts",
    "continuous-integration.js",
    "copy-assets.d.ts",
    "copy-assets.js",
    "error-report.pug",
    "loader/json.d.ts",
    "loader/json.js",
    "loader/peggy.d.ts",
    "loader/peggy.js",
    "loader/trace.d.ts",
    "loader/wrap.d.ts",
    "loader/wrap.js",
    "make-dirs.d.ts",
    "make-dirs.js",
    "package.json",
    "manifest.d.ts",
    "manifest.js",
    "root.d.ts",
    "root.js",
    "version.d.ts",
    "version.js",
    "debug-log.js",
    "debug-log.d.ts",
    "create-element.js",
    "create-element.d.ts",
    "logger.js",
    "logger.d.ts"
  ],
  "bugs": {
    "url": "https://github.com/retorquere/zotero-plugin/issues"
  },
  "devDependencies": {
    "@openpgp/web-stream-tools": "^0.1.3",
    "dprint": "^0.50.1",
    "esbuild": "^0.25.8"
  }
}
