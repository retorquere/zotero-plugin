{
  "name": "zotero-plugin",
  "version": "5.0.4",
  "description": "Zotero plugin builder",
  "homepage": "https://github.com/retorquere/zotero-plugin/wiki",
  "exports": {
    "./build/root": {
      "import": "./dist/root.mjs",
      "require": "./dist/root.js"
    },
    "./build/rdf": {
      "import": "./dist/rdf.mjs",
      "require": "./dist/rdf.js"
    },
    "./plugin/logger": {
      "import": "./dist/logger.mjs",
      "require": "./dist/logger.js"
    },
    "./plugin/create-element": {
      "import": "./dist/create-element.mjs",
      "require": "./dist/create-element.js"
    },
    "./build/continuous-integration": {
      "import": "./dist/continuous-integration.mjs",
      "require": "./dist/continuous-integration.js"
    },
    "./build/loader/peggy": {
      "import": "./dist/loader/peggy.mjs",
      "require": "./dist/loader/peggy.js"
    },
    "./build/loader/json": {
      "import": "./dist/loader/json.mjs",
      "require": "./dist/loader/json.js"
    },
    "./plugin/debug-log": {
      "import": "./dist/debug-log.mjs",
      "require": "./dist/debug-log.js"
    },
    "./build/version": {
      "import": "./dist/version.mjs",
      "require": "./dist/version.js"
    },
    "./build/copy-assets": {
      "import": "./dist/copy-assets.mjs",
      "require": "./dist/copy-assets.js"
    },
    "./build/make-dirs": {
      "import": "./dist/make-dirs.mjs",
      "require": "./dist/make-dirs.js"
    }
  },
  "bin": {
    "zotero-plugin-release": "dist/bin/release.js",
    "zotero-plugin-zipup": "dist/bin/zipup.js",
    "zotero-plugin-link": "dist/bin/link.js",
    "issue-branches": "dist/bin/branches.js",
    "zotero-start": "dist/bin/start.py",
    "fetch-zotero-log": "dist/bin/fetch-zotero-log.py"
  },
  "author": {
    "name": "Emiliano Heyns",
    "email": "Emiliano.Heyns@iris-advies.com"
  },
  "scripts": {
    "preversion": "npm test",
    "postversion": "git push --follow-tags",
    "test": "dprint fmt *.ts */*.ts && dprint check *.ts */*.ts && npm run build",
    "buildx": "tsc && ./bundle.mjs && chmod +x bin/*.js",
    "build": "make",
    "pack": "npm test && npm pack",
    "prepublishOnly": "npm install && npm run build",
    "ncu": "ncu -u && npm i && git add package.json package-lock.json && git commit -m ncu"
  },
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "@octokit/rest": "^21.1.1",
    "@rgrove/parse-xml": "^4.2.0",
    "@types/node": "^22.13.8",
    "@xmldom/xmldom": "^0.9.8",
    "ajv": "^8.17.1",
    "ajv-keywords": "^5.1.0",
    "archiver": "^7.0.1",
    "clp": "^4.0.13",
    "commander": "^13.1.0",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.1",
    "jsesc": "^3.1.0",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "peggy": "^4.2.0",
    "properties-reader": "^2.3.0",
    "pug": "^3.0.3",
    "rimraf": "^6.0.1",
    "shell-quote": "^1.8.2",
    "shelljs": "^0.8.5",
    "string-to-arraybuffer": "^1.0.2",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.8.2",
    "uri-templates": "^0.2.0",
    "uzip": "^0.20201231.0",
    "xml-parser": "^1.2.1",
    "xpath": "^0.0.34"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/retorquere/zotero-plugin.git"
  },
  "license": "ISC",
  "files": [
    "dist"
  ],
  "bugs": {
    "url": "https://github.com/retorquere/zotero-plugin/issues"
  },
  "devDependencies": {
    "dprint": "^0.49.0",
    "esbuild": "^0.25.0"
  }
}
