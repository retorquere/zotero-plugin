    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "peggy": "^4.2.0",
    "properties-reader": "^2.3.0",
    "pug": "^3.0.3",
    "rimraf": "^6.0.1",
    "shell-quote": "^1.8.2",
    "shelljs": "^0.9.2",
    "string-to-arraybuffer": "^1.0.2",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "uri-templates": "^0.2.0",
    "uzip": "^0.20201231.0",
    "xml-parser": "^1.2.1",
    "xpath": "^0.0.34"
  },
  "repository": {
    "type": "git",
