{
  "files": [],
  "references": [
    { "path": "./tsconfig.cjs.json" },
    { "path": "./tsconfig.esm.json" }
  ],
  "compilerOptions": {
    "allowUnreachableCode": false,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist",
    "disableSizeLimit": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "preserveConstEnums": false,
    "removeComments": false,
    "resolveJsonModule": true,
    "sourceMap": false,
    "target": "es2017",
    "lib": [ "es2017", "dom", "ES2021.WeakRef" ],
    "typeRoots": [
      "./typings",
      "./gen/typings",
      "./node_modules/@types"
    ]
  },
  "include": [
    "bin",
    "loader",
    "plugin",
    "script",
    "content/**/*",
    "resource/**/*",
    "setup/**/*",
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "typings"
  ]
}
