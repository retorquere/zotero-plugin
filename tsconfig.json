{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "es2022"
    ],

    "allowUnreachableCode": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false
  },
  "include": [
    "bin",
    "loader",
    "*.ts"
  ]
}
